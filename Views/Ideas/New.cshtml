@model Idea

<div class="container mt-4">
    <form asp-action="Create" asp-controller="Ideas" method="POST">
        <h3>
            Hi!
        </h3>
    
        </div>
        <div class="form-group row">
            <label asp-for="Body" class="col-sm-2 col-form-label">
                <span asp-validation-for="Body" class="text-danger font-weight-bold"></span>
            </label>
            <div class="col-sm-10">
                <textarea asp-for="Body" class="form-control" rows="10" placeholder="Post something witty here..."></textarea>
            </div>
        </div>

        <div class="text-right">
            <a asp-controller="Ideas" asp-action="Dashboard" class="btn btn-primary">Cancel</a>
